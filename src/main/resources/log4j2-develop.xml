<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="sysLogFile">logs/system.log</Property>
        <Property name="runtimeFile">logs/runtime.log</Property>
        <Property name="restClientFile">logs/restClient.log</Property>

        <Property name="compressFile">logs/$${date:yyyy-MM}/%d{MM-dd-yyyy}-%i.log.gz</Property>
        <Property name="logPattern">%d [${sys:PID}] [%5p] [%20t] %c.%M : %m%n
        </Property>
    </Properties>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>
        </Console>

        <File name="ERROR" fileName="logs/error.log" append="false">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>
        </File>

        <File name="WARN" fileName="logs/warn.log" append="false">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>
        </File>

        <RollingFile name="ALL" fileName="${sysLogFile}" filePattern="${compressFile}">
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="24"/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RUNTIME" fileName="${runtimeFile}" filePattern="${compressFile}">
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="24"/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RESTCLIENT" fileName="${restClientFile}" filePattern="${compressFile}">
            <PatternLayout>
                <pattern>${logPattern}</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="24"/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>

    <Loggers>
        <logger name="org.springframework" level="INFO"></logger>
        <logger name="org.mybatis" level="INFO"></logger>
        <logger name="org.hibernate" level="INFO"></logger>

        <Root level="debug">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ALL"/>
            <AppenderRef ref="WARN"/>
            <AppenderRef ref="ERROR"/>
        </Root>

        <logger name="pri.smilly.demo.logger.HttpRestClientLogger" level="debug">
            <AppenderRef ref="RESTCLIENT"/>
            <AppenderRef ref="WARN"/>
            <AppenderRef ref="ERROR"/>
        </logger>

        <logger name="pri.smilly.demo.logger.ProcessExecutorLogger" level="debug">
            <AppenderRef ref="RUNTIME"/>
            <AppenderRef ref="WARN"/>
            <AppenderRef ref="ERROR"/>
        </logger>

    </Loggers>

</Configuration>